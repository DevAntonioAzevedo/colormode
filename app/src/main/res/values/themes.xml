<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Temas" parent="Theme.AppCompat.DayNight">
        <!-- Status Bar Light-->
        <item name="android:statusBarColor">@color/dark_gray</item>
    </style>
    <!-- Background Default Light -->
    <style name="BACKGROUND">
        <item name="android:background">@color/white</item>
    </style>
    <!-- TextView Default Light -->
    <style name="TEXTCOLOR">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- Button Default Light -->
    <style name="FLOATING_ACTION_BUTTON">
        <item name="android:backgroundTint">@color/teal_200</item>
        <item name="android:tint">@color/white</item> <!-- Utilizado para definir a cor do Ã­cone -->
    </style>
    <style name="Theme.Temas" parent="Base.Theme.Temas" />
</resources>